<body>
    <h1>Home</h1>

    <h3>Cadastre o seu livro: </h3>
    <form action="/books/insertbook" method="POST" class="form">
        <div class="form-control">
            <label for="title">Titulo: </label>
            <input type="text" name="title" id="title">
        </div>
        <div class="form-control">
            <label for="pageqty">Nº de páginas: </label>
            <input type="text" name="pageqty" id="pageqty">
        </div>
        <input type="submit" value="Cadastrar">
    </form>
</body>

